<% content_for :sidebar do %>
  <h3>
    Recent Activity:
  </h3>
  <ul>
    <% @latest_contributions.each do |contribution| %>
      <li><%= link_to(contribution.participant.name, contribution.participant) %> got <strong><%= contribution.point_value %> pts</strong> for <%= link_to("##{contribution.lighthouse_id}", "https://rails.lighthouseapp.com/projects/8994/tickets/#{contribution.lighthouse_id}") %> <em><%= time_ago_in_words(contribution.created_at)  %> ago</em></li>
    <% end %>
  </ul>
<% end %>

<table>
  <caption>
    <%= h(current_event.name) %> <em>Last updated: <%= time_ago_in_words(@time_stamp) %></em>
  </caption>
  <tr>
    <th>Place</th>
    <th>Name</th>
    <th>Score</th>
  </tr>

<% @participants.each_with_index do |participant, index| %>
  <tr class="<%= cycle('even', 'odd') %>">
    <th><%= index + 1 + ((@participants.current_page - 1) * @participants.per_page) %></th>
    <td><%= link_to(h(participant.name), participant) %></td>
    <td><%= participant.score %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @participants %>
